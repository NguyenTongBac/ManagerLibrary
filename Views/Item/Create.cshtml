@model Controllers.Dtos.Items.ItemCreateUpdateDto
@using Models.Enums

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
    var SelectCategory = ViewBag.SelectCategory;
}

<form action="Create" method="post">
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Author"></label>
        <input asp-for="@Model.Author" class="form-control" />
        <span asp-validation-for="@Model.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.PublishDate"></label>
        <input asp-for="@Model.PublishDate" class="form-control" />
        <span asp-validation-for="@Model.PublishDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price"></label>
        <input asp-for="@Model.Price" class="form-control"/>
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Category"></label>
        <select class="form-select" aria-label="Default select example" asp-for="@Model.Category" asp-items="@SelectCategory"></select>
        <span asp-validation-for="@Model.Category"></span>
    </div>
    <div class="form-group" id="bookPageNumber">
        <label asp-for="@Model.NumberOfPage"></label>
        <input asp-for="@Model.NumberOfPage" class="form-control" />
        <span asp-validation-for="@Model.NumberOfPage" class="text-danger"></span>
    </div>
    <div class="form-group" id="dvdRuntime">
        <label asp-for="@Model.RunTime"></label>
        <input type="time" asp-for="@Model.RunTime" class="form-control" />
        <span asp-validation-for="@Model.RunTime" class="text-danger"></span>
    </div>
    
    <button id="NewExampleButton" name="CreateExample" class="mx-1 btn btn-primary btn-sm" type="submit" data-busy-text="Đang xử lý...">
        <i class="fa fa-plus"></i> 
        <span>Save</span>
    </button>
    <a id="NewExampleButton" name="CreateExample" href="Index" class="mx-1 btn btn-primary btn-sm" type="button" data-busy-text="Đang xử lý...">
        <i class="fa fa-plus"></i> 
        <span>Cancel</span>
    </a>
</form>

<script>
    $(document).ready(function() {
        // Ẩn tất cả các thẻ input ban đầu

        $('#dvdRuntime').hide();
        
        // Bắt sự kiện thay đổi trong thẻ select
        $('#Category').change(function() {
            var selectedValue = $(this).val();
            
            // Nếu giá trị được chọn là Book, hiển thị thẻ input NumberOfPage và ẩn thẻ input RunTime
            if (selectedValue === 'Book') {
            $('#bookPageNumber').show();
            $('#dvdRuntime').hide();
            }
            
            // Nếu giá trị được chọn là DVD, hiển thị thẻ input RunTime và ẩn thẻ input NumberOfPage
            if (selectedValue === 'DVD') {
            $('#dvdRuntime').show();
            $('#bookPageNumber').hide();
            }

            if (selectedValue === 'Magazine')
            {
                $('#dvdRuntime').hide();
                $('#bookPageNumber').hide();
            }
        });
    });
</script>